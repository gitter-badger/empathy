body { background-color: #fff; margin: 0; text-align: center; 
	background-image: url('../img/af.gif'); }

 #page { padding: 0; width: 740px; margin: 0 auto; text-align: left; } 

#page #logo { margin: 0; }

#page #content { margin: 0; padding: 0; }

#page #front_float { position: relative; top: -200px;
	left: 360px; width: 300px; }

#page h1 { text-align: center; }
#page h1, #page h2, #page h3, #page p { margin: 0.5em; }

#page table { width: 100%; }
#page table tr td, #page, table, tr, th { border: 2px; padding: 0.5em; text-align: left; vertical-align: top; }

#page table tr td img { border: 1px solid #eee; margin: 0.5em; background-color: #fff; }

#page ul { list-style: square; }

#page #nav { text-align: center; }
#page #nav li { display: inline; }
#page #nav li a { margin: 0 1em; }


#page #contain_center { text-align: center; }
div.product { text-align: left; width: 300px; margin: 0 auto; border: 3px solid #eee;
	background-color: #fff; padding: 0.5em; }
div.product img { float: left; }

#footer { margin: 3em 0 0 0; text-align: center; }

form p { clear: both; }
form p label { width: 200px; float: left; margin: 0.5em; }
form p input, form p select, form p textarea { float: left; margin: 0.5em; border: 1px solid #ccc; }
form p input:focus, form p select:focus, form p textarea:focus { border: 1px solid #666; }

.input_small { width: 30px }

.clear { clear: both; }


/* typography */


body { font-family: sans-serif; font-size: 1em; color: #000; }
h1 { font-size: 3em; color: #fff;font-weight: bold; }
h1 a { text-decoration: none; }
h2 { font-size: 1.4em; } 
h3 { font-size: 1em; }
#page p, #page table tr td, #page table tr th { font-size: 0.9em; }

#page table th { font-weight: bold; }

form p input, form p select, form p textarea { font-family: sans-serif; font-size: 1.3em; }


a { color: #000; }

ul li a { text-decoration: none; }
ul li a:hover { text-decoration: underline; }

.action { text-decoration: none; font-size: 0.9em; color: #000; }
.action:hover { text-decoration: underline; }

.light { color: #ccc; }

#footer p { font-size: 0.8em; color: #666; }
#footer p a { color: #666; }

#front_float p { font-size: 2em; color: #fff; }